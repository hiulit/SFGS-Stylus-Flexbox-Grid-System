// Want to use Normalize? Say "yes" or "no"!
// or just use the good ol' "true" or "false"....
$normalize = "yes"

// Set debug mode "on" or "off" to highlight border on both rows and columns
$debug-mode = "on"

// Default variables
$base-font-size = 16

// Grid variables
$grid-columns = 12
$grid-gutter-width = 20px

// Breakpoints
$breakpoints = {
    sm:     0,
    md:     640px,
    lg:     1200px,
    xlg:    1440px,
    xxlg:   1920px
}
